<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <useStyles filename="nifty-default-styles.xml" />
    <useControls filename="nifty-default-controls.xml" />

    <screen id="start" controller="de.fhflensburg.graveyardmanager.states.CreateGameView">
        <layer childLayout="vertical">
            <text text="Wähle Deine Karte aus:" textHAlign="center" align="center" font="res/de/fhflensburg/graveyardmanager/fonts/courrier16b.fnt" />
            <panel childLayout="horizontal" height="*" width="*">
                <text id="mapSelectLabel" color="#ffff" font="res/de/fhflensburg/graveyardmanager/fonts/courrier16b.fnt" width="200px" text="${CALL.getMapName()}" valign="center" />
                <control id="mapSelect" name="imageSelect" width="300px" imageHeight="300px" imageList="${CALL.getAllMaps()}" />
            </panel>
            <text text="Wähle Deinen Charakter aus:" textHAlign="center" align="center" font="res/de/fhflensburg/graveyardmanager/fonts/courrier16b.fnt" />
            <panel childLayout="horizontal" height="*" width="*">
                <text id="charSelectLabel" color="#ffff" font="res/de/fhflensburg/graveyardmanager/fonts/courrier16b.fnt" width="200px" text="${CALL.getCharacterName()}" valign="center" />
                <control id="charSelect" name="imageSelect" width="300px" imageHeight="300px" imageList="${CALL.getAllCharacterImages()}" />
            </panel>
            <panel childLayout="horizontal">
            <control id="startGameButton" name="button" label="Starten"/>
            <control id="backToMainMenuButton" name="button" label="Zurück"/>
            </panel>
        </layer>
    </screen>
</nifty>