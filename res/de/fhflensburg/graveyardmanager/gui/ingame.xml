                        <panel height="40px" width="100%" childLayout="vertical" backgroundColor="#800f">
                            <image filename="res/de/fhflensburg/graveyardmanager/images/fileclose.png"  height="32px" width="32px" visibleToMouse="true" align="right" marginTop="1%">
                                <effect><onClick name="hide" targetElement="window_BuildItems" /></effect>
                            </image>
                        </panel>
                        <panel childLayout="absolute-inside" valign="top" width="602px" height="178px">
                            <image id="buildItem_1" filename="res/de/fhflensburg/graveyardmanager/sprites/64_64_Tombstones.png" imageMode="sprite:64,64,1" height="64px" width="64px" marginTop="1%" valign="top" x="10px" y="0px">
                                <interact onClick="buildItem(3)"/>
                                <effect>
                                    <onHover name="hint" hintText="Urne für die Seebestattung" hintDelay="100"/>
                                </effect>
                            </image>
                            <image id="buildItem_2" filename="res/de/fhflensburg/graveyardmanager/sprites/64_64_Tombstones.png" imageMode="sprite:64,64,2" height="64px" width="64px" x="84px" y="0px">
                                <interact onClick="buildItem(4)"/>
                                <effect>
                                    <onHover name="hint" hintText="einfaches Holzkreuz" hintDelay="100"/>
                                </effect>
                            </image>
                            <image id="buildItem_3" filename="res/de/fhflensburg/graveyardmanager/sprites/64_64_Tombstones.png" imageMode="sprite:64,64,3" height="64px" width="64px" x="158px" y="0px">
