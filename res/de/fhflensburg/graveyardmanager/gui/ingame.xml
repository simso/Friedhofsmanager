                                <!--<interact onClick="buildItem()"/>-->
                                <!--<effect>-->
                                    <!--<onHover name="hint" hintText="" hintDelay="100"/>-->
                                <!--</effect>-->
                            <!--</image>-->
                        </panel>
                    </panel>
                </panel>
                <panel id="east" align="right" childLayout="vertical" height="100%" width="64px">
                    <image id="mapToggleImage" filename="res/de/fhflensburg/graveyardmanager/images/Kompassrose.png"  height="64px" width="64px">
                        <interact onClick="toggleMiniMap()" />
                        <effect>
                            <onHover name="hint" hintText="${locallang.minimap}" hintDelay="300" />
                        </effect>
                    </image>
                    <image filename="res/de/fhflensburg/graveyardmanager/images/alterAuftrag.png" height="64px" width="64px" marginTop="1%">
                        <interact onClick="currentOrder()" />
                        <effect>
                            <onHover name="hint" hintText="${locallang.activemisson}" hintDelay="300" />
                        </effect>
                    </image>
                </panel>
                <panel id="west" childLayout="vertical">
                    <control id="window_OrderList" name="window" title="${locallang.allOrders}" width="500px" height="400px" x="400px" hideOnClose="true">
                        <text wrap="true" text="Dein erster Auftrag lauet: Lege ein Grab an. Dazu gehst du auf den Button bauen. Wähle das Grab aus und klicke an die Stelle auf der das Grab errichtet werden soll." style="base-font" color="#eeef" valign="center" width="100%" />
                    </control>
                    <!--<control id="window_BuildItems" name="window" title="${locallang.build}" width="500px" height="400px" x="400px" hideOnClose="true">-->
                        <!--<text text="${locallang.build}" style="base-font" color="#eeef" valign="center" width="100%" />-->
                    <!--</control>-->
                </panel>
            </panel>
            <panel id="south" align="center" childLayout="horizontal" height="64px" padding="20px" valign="bottom" width="60%">
                <image id="orderList" filename="res/de/fhflensburg/graveyardmanager/images/Auftrag.png"  height="64px" width="64px" margin="1%">
                    <interact onClick="newOrder()" />
                    <effect>
                        <onHover name="hint" hintText="Auftrag" hintDelay="100" />
                    </effect>
                </image>
                <image id="" filename="res/de/fhflensburg/graveyardmanager/images/Buildings.png"  height="64px" width="64px" margin="1%">
                    <interact onClick="buildings()" />
                    <effect>
                        <onHover name="hint" hintText="${locallang.buildings}" hintDelay="300" />
                    </effect>
                </image>
                <image id="buildButton" filename="res/de/fhflensburg/graveyardmanager/images/Bauen.png"  height="64px" width="64px" margin="1%">
                    <interact onClick="buildItems()" />
                    <effect>
                        <onHover name="hint" hintText="${locallang.build}" hintDelay="300" />
                    </effect>
                </image>
                <image filename="res/de/fhflensburg/graveyardmanager/images/Dracula.png"  height="64px" width="64px" margin="1%">
                    <interact onClick="staff()" />
                    <effect>
                        <onHover name="hint" hintText="${locallang.staff}" hintDelay="300" />
                    </effect>
                </image>
                <image filename="res/de/fhflensburg/graveyardmanager/images/Telefon.png"  height="64px" width="64px" margin="1%">
                    <interact onClick="fon()" />
                    <effect>
                        <onHover name="hint" hintText="${locallang.phone}" hintDelay="300" />
                    </effect>
                </image>
