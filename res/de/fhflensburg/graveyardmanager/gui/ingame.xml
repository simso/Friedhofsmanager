                                <interact onClick="buildItem(5)"/>
                                <effect>
                                    <onHover name="hint" hintText="Grabstein (Sandstein)" hintDelay="100"/>
                                </effect>
                            </image>
                            <image id="buildItem_5" filename="res/de/fhflensburg/graveyardmanager/images/Kirche.png" height="64px" width="64px" x="306px" y="0px">
                                <interact onClick="buildItem(0)"/>
                                <effect>
                                    <onHover name="hint" hintText="Kirche" hintDelay="100"/>
                                </effect>
                            </image>
                            <image id="buildItem_6" filename="res/de/fhflensburg/graveyardmanager/sprites/320_320_Buildings.png" imageMode="sprite:320,320,2" height="64px" width="64px" x="380px" y="0px">
                                <interact onClick="buildItem(1)"/>
                                <effect>
                                    <onHover name="hint" hintText="Kapelle" hintDelay="100"/>
                                </effect>
                            </image>
                            <image id="buildItem_7" filename="res/de/fhflensburg/graveyardmanager/sprites/320_320_Buildings.png" imageMode="sprite:320,320,1" height="64px" width="64px" x="454px" y="0px">
                                <interact onClick="buildItem(2)"/>
                                <effect>
                                    <onHover name="hint" hintText="Haus" hintDelay="100"/>
                                </effect>
                            </image>
                            <!--<image id="buildItem_8" filename="res/de/fhflensburg/graveyardmanager/sprites/64_64_Tombstones.png" height="64px" width="64px" x="528px" y="0px">-->
